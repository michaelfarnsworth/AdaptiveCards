{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "Image",
      "url": "https://adaptivecards.io/content/cats/1.png",
      "size": "Medium",
      "selectAction": {
        "type": "Action.Submit",
        "isEnabled": false
      }
    },
    {
      "type": "Input.Text",
      "placeholder": "Placeholder text",
      "id": "IsEnabledInputId",
      "inlineAction": {
